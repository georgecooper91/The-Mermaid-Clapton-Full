<% include partials/header %>
        <main>
            <section class="section-b">
                <div class="update">
                    <h1>Edit <%= event.name %></h1>
                    <form action="/admin/<%= event._id %>?_method=PUT" method="POST">
                        <input type="text" name="name" value="<%= event.name %>" required>
                        <input type="text" name="date" value="<%= event.date %>" required pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}">
                        <input type="text" name="image" value="<%= event.image %>" required><br>
                        <textarea name="description" id="description" cols="30" rows="10" required><%= event.description %></textarea><br>
                        <button>Update!</button>
                    </form>
                </div>
            </section>
        </main>

<% include partials/footer %>
